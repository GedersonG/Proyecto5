<%- include('./partials/_header'); %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/update/<%= data.id_Usuario %>" method="post">
                        <div class="form-group mt-1">
                            <input type="text" name="id_Cargo" value="<%= data.id_Cargo %>" placeholder="Cargo" class="form-control">
                        </div>
                        <div class="form-group mt-1">
                            <input type="text" name="clave" value="<%= data.clave %>" placeholder="Contraseña" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="nombre" value="<%= data.nombre %>" placeholder="Nombre" class="form-control">
                        </div>
                        <div class="form-group mt-1">
                            <input type="text" name="telefono" value="<%= data.telefono %>" placeholder="Telefono" class="form-control">
                        </div>
                        <div class="form-group mt-1">
                            <input type="text" name="direccion" value="<%= data.direccion %>" placeholder="Dirección" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary mt-1">
                            Editar usuario
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>